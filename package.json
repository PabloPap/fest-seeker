{
  "name": "fest-seeker",
  "version": "1.0.0",
  "description": "website layout",
  "main": "index.js",
  "scripts": {
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "stylelint": "stylelint \"src/*.css\"",
    "stylelint-check": "stylelint-config-prettier-check",
    "format": "prettier --write \"src/**/*.+(js|md|ts|css|scss|json)\"",
    "clean": "rimraf dist/{css/style.*,js/*}",
    "compile-sass": "node-sass --output-style=expanded --source-map=true src/scss/main.scss dist/css/style.css",
    "concat-css": "concat -o dist/css/style.css dist/css/icons/icon-font.css dist/css/style.css",
    "prefix": "postcss dist/css/style.css --use=autoprefixer --map=false --output=dist/css/style.css",
    "minify-css": "cleancss --level=1 --source-map --source-map-inline-sources --output dist/css/style.css dist/css/style.css",
    "imagemin": "imagemin src/images/* -o dist/images",
    "icons": "svgo -f src/images/icons -o dist/images/icons",
    "serve": "browser-sync start --server \"dist\" --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "dev:css": "run-s compile-sass",
    "dev": "run-s dev:*",
    "watch:css": "onchange \"src/scss\" -- run-s dev:css",
    "watch": "run-p serve watch:*",
    "prod:css": "run-s concat-css prefix minify-css",
    "prod": "run-s prod:*",
    "development": "run-s dev watch",
    "production": "run-s clean dev prod"
  },
  "author": "pavlos papadopoulos",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "clean-css-cli": "^4.2.1",
    "concat": "^1.0.3",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.1.0",
    "postcss-cli": "^6.0.1",
    "prettier": "^1.15.1",
    "rimraf": "^2.5.4",
    "stylelint": "^9.8.0",
    "stylelint-config-prettier": "^4.0.0",
    "svgo": "^1.0.3",
    "uglify-js": "^3.4.9"
  }
}
